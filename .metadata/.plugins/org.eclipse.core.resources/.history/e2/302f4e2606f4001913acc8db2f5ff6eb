
public class StudentScoresApp {

	public static void main(String[] args) {
		System.out.println("Welcome to the Student Scores Application");
		
		int numberStudents = Console.getInt("Number of students: ", 1, 500);
		
		Student[] studs = new Student[numberStudents];
		
		for (int i = 0; i < numberStudents; i++) {
			System.out.println("STUDENT " + (i+1) );
			String lastName = Console.getString("Last name: ");
			String firstName = Console.getString("First name: ");
			int score = Console.getInt("Score:", 0, 100); 
			studs[i].lastName = lastName;
			studs[i].firstName = firstName;
			studs[i].score = score;
			
		}
		
		System.out.println("SUMMARY");
		
		for (int i = 0; i < numberStudents; i++) {

			System.out.println("");
			System.out.println(studs[i].lastName + ", " + 
					studs[i].firstName + ": " + studs[i].score );
			
		}

	}

}
