package business;

import java.util.ArrayList;

import util.Console;

public class WizardInventoryApp {

	public static void main(String[] args) {

		System.out.println("The Wizard Inventory game");
	
		String cmd = "";
              
		ArrayList<String> items = new ArrayList<>();
		items.add("wooden staff");
		items.add("wizard hat");
		items.add("cloth shoes");

		System.out.println("COMMAND MENU");
		displayMenu();
		
		while (! cmd.equalsIgnoreCase("exit")) {
			
			int itemNumber = 0;
			cmd = Console.getString("Command: ");
			
			System.out.println("\nCommand: " + cmd);
			switch (cmd) {
			case "show":
				if (items.size() == 0) {
					System.out.println("No items to show");
				} else {
					System.out.println("DISPLAY ITEMS");
					//showItems(items);
				}
				break;
				
			case "grab":
				if (items.size() == 4) {
					System.out.println("You can't carry any more items. " +
							"Drop something first");
				} else {
					String s = Console.getString("Name: ");
					items.add(s);
				}
				break;
				
			case "edit":
				itemNumber = Console.getInt("Number: ", 1, (items.size() - 1) ); 
				String updatedName = Console.getString("Updated name: ")
				items.set(itemNmber, updatedName);
				break;
				
			case "drop":
				if (items.size() = 0) {
					System.out.println("No items to drop");
				} else {
					itemNumber = Console.getInt("Number: ", 1, items.size() ); 
					String str1 = items.remove(itemNumber - 1);
					System.out.println(str1 + "was dropped.");
				}
				break;
			case "exit":
				break;
			default:
				System.out.println("Invalid command; try again ");
				break;
			}

		}
		
		System.out.println("Bye!");
	}
	
	public static void displayMenu() {
		
		System.out.println("show - Show all items");
		System.out.println("grab - Grab an item");
		System.out.println("edit - Edit an item");
		System.out.println("drop - Drop an item");
		System.out.println("exit - Exit program");
	}
	
}