public class PrsConsoleApp {

	public static void main(String[] args) {

		int menuOpt = 0;
		System.out.println("Welcome to the PRS Console!");
		
		while (menuOpt != 6) {
			displayMenu();
			menuOpt = getInt;
			cmd = Console.getString("\nCommand: ");
			
		}
		

	}
	
	public static void displayMenu() {

		System.out.println("\nCOMMAND MENU");
